<div class="top-padding">
  <div class="container" id="main">
    <div class="row">
      <div class="col-md-12">

        <h1>Leaderboard</h1>

        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <th></th>
              <th></th>
              <th>Nike <img src='images/logos/nikefuel.png' alt='nikefuel' height='24' width='24' /></th>
              <!-- <th>Fitbit <img src='images/logos/fitbit.png' alt='fitbit' height='24' width='24' /></th> -->
              <th>Strava <img src='images/logos/strava.png' alt='strava' height='24' width='24' /></th>
              <!-- <th>RunKeeper <img src='images/logos/runkeeper.jpg' alt='runkeeper' height='24' width='24' /></th> -->
            </thead>
            <tbody>
            {{#each}}
            <tr>
              <td><img {{bind-attr src=avatar alt=first_name}} height='24' width='24' /></td>
              <td>
                {{#link-to 'user' this}}
                {{first_name}} {{last_name}}
                {{/link-to}}
              </td>
              {{#each activity in activities}}
              <td>{{activity.duration}}</td>
              {{/each}}
            </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
